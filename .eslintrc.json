{
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "camelcase": [0],
    "no-param-reassign": [0],
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "func-names": 0,
    "no-console": 0,
    "newline-per-chained-call": 0,
    "prefer-const": 0,
    "linebreak-style": 0, // due to thousands of "Expected linebreaks to be 'LF' but found 'CRLF'  linebreak-style" errors on windows
    "no-restricted-syntax": [2, "DebuggerStatement", "LabeledStatement", "WithStatement"]
  }
}
